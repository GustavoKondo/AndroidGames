<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="10dp">

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/image_console"
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:src="@drawable/image_console"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/console_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/image_console"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Nitendo Switch"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginStart="20dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/console_description"
        android:layout_width="210dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/console_name"
        app:layout_constraintStart_toEndOf="@+id/image_console"
        android:text="console hibrido que se asemelha a um tablet o qual pode ser acoplado a um dock e, assim, ser transformado em um console de mesa."
        android:layout_marginStart="10dp"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/console_description"
        app:layout_constraintStart_toEndOf="@+id/image_console"
        android:text="Release Date:  "
        android:layout_marginStart="10dp"
        android:textColor="@android:color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="console maker:"
        app:layout_constraintTop_toBottomOf="@+id/release_date"
        app:layout_constraintStart_toEndOf="@+id/image_console"
        android:layout_marginStart="10dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="4dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>